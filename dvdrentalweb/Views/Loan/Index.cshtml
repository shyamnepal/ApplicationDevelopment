@{
}
<h1>Return The DVD Copy</h1>

<table class="table">

    <thead>
        <tr>
            <th>
               Customer Name
            </th>
            <th>
               DVD Title
            </th>
            <th>
               Copy Number
            </th>
            <th>
               Date Out
            </th>
            <th>
               Date Due
            </th>
            <th>
               Date Returned
            </th>
            <th>
               Standard Charge
            </th>
            <th>
               Penalty Charge
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.MemberFirstName @item.MemberLastName
            </td>
            <td>
                @item.DVDTitle
            </td>
            <td>
                @item.CopyNumber
            </td>
            <td>
                @item.DateOut
            </td>
            <td>
                @item.DateDue
            </td>            
            @if(item.DateReturned == null)
                {
                    <td>
                        Not Returned
                    </td>
                } 
                else
                {
                    <td>
                        @item.DateReturned                            
                    </td>
                    
                }
            <td>
                @item.StandardCharge
            </td>
            <td style="color:red">
                    @if (item.DateDue < item.DateReturned)
                    {
                        @item.PenaltyCharge
                    }
            </td>
            <td>
                @if(item.DateReturned == null)
                {
                     <a asp-controller="Loan" asp-action="Update" asp-route-id="@item.LoanNumber"
                        class="btn btn-primary mx-2">Return DVD</a> 
                }
            </td>
        </tr>}
    </tbody>
</table>

