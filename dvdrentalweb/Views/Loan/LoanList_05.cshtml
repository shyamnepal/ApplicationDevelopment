@model IEnumerable<dvdrentalweb.Models.Loan>
@{
    ViewData["Title"] = "LoanList_05";
}

<h1>Loan of Copy</h1>

<div class="col-4 p-0 0 justify-content-end">
  <form asp-controller="Loan" asp-action="LoanList_05">
      <span class="btn-group">
          <input class="form-control" type="text" name="SearchText" placeholder="Search by Member Number" />
          <input class="p-1 ml-2 btn-primary " type="submit" value="Search"/>
      </span>
  </form>  
</div>

<table class="table">

    <thead>
        <tr>
            <th>
               Copy Numbers
            </th>
            <th>
               DVD Title
            </th>
            <th>
               Date Out
            </th>
            <th>
                Date Returned
            </th>
            <th>
                Date Due
            </th>
            <th>
                Member Name (Last Loan)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.CopyNumber
            </td>
            <td>
                @item.DVDTitle
            </td>
            <td>
                @item.DateOut
            </td>
            @if(item.DateReturned == null)
                {
                    <td>
                        Not Returned
                    </td>
                } 
                else
                {
                    <td>
                        @item.DateReturned                            
                    </td>
                    
                }
            <td>
                @item.DateDue
            </td>
            <td>
                @item.MemberFirstName @item.MemberLastName
            </td>
        </tr>
}
    </tbody>
</table>

