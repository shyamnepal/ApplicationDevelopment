@model IEnumerable<dvdrentalweb.Models.Member>
@{
    ViewData["Title"] = "MemberList_03";
}

<h1>Activities of Members</h1>

<div class="col-4 p-0 0 justify-content-end">
  <form asp-controller="Member" asp-action="MemberList_03">
      <span class="btn-group">
          <input class="form-control" type="text" name="SearchText" placeholder="Search by Member surname or Member Number" />
          <input class="p-1 ml-2 btn-primary " type="submit" value="Search"/>
      </span>
  </form>
  
</div>

<table class="table">

    <thead>
        <tr>
            <th>
               Member's Name
            </th>
            <th>
               DVD Title
            </th>
            <th>
               Date Out
            </th>
            <th>
               Date Returned
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @item.MemberFirstName @item.MemberLastNamae
                    </td>
                    <td>
                        @item.DVDTitle
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOut)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateReturned)
                    </td>
                </tr>
        }
    </tbody>
</table>

