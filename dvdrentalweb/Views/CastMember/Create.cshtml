@{
}

<form method="post" asp-action="Create">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Add Cast Members</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="DVDNumber"></label>
			<!-- <input asp-for="DVDNumber" class="form-control"/> -->
			@Html.DropDownList("DVDNumber", ViewBag.dvdTitleName as SelectList, "Select DVD Title", new {@class = "form-control"})
			<span asp-validation-for="DVDNumber" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ActorNumber"></label>
			<!-- <input asp-for="ActorNumber" class="form-control"/> -->
			@Html.DropDownList("ActorNumber", ViewBag.actorName as SelectList, "Select Actor", new {@class = "form-control"})
			<span asp-validation-for="ActorNumber" class="text-danger"></span>
		</div>	
		<button type="submit" class="btn btn-primary" style="width:150px">Submit</button>
		<a asp-controller="CastMember" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>
