@model IEnumerable<dvdrentalweb.Models.DVDCopy>
@{
    ViewData["Title"] = "Delete DVDs";
}

<h1>Removing Old DVDs</h1>

<table class="table">
    <thead>
        <tr>
            <th>
               DVD Title
            </th>
            <th>
               DVD Copy Number
            </th>
            <th>
               Date Released
            </th>
            <th>
               
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.DVDTitle
            </td>
            <td>
                @item.CopyNumber
            </td>
            <td>
                @item.DateReleased 
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                        <a asp-controller="DVDCopy" asp-action="Delete" asp-route-Id="@item.CopyNumber"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
				</div>
            </td>
        </tr>
}
    </tbody>
</table>

