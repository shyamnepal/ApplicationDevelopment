@{
}

<h2>Producers</h2>
<a asp-controller="Actor" asp-action="Create">Add Actor</a>
<table class="table">
    <thead>
        <tr>
            <th>
               Actor Number
            </th>
            <th>
               Actor Name
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.ActorNumber
            </td>
            <td>
                @item.ActorFirstName @item.ActorSurName 
            </td>
        </tr>}
    </tbody>
</table>
<a asp-controller="DVDTitle" asp-action="Index" class="btn btn-primary">Back to Add a DVD</a>