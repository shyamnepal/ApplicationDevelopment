@model IEnumerable<dvdrentalweb.Models.Actor>

@{
    ViewData["Title"] = "ActorList_01";
}

<h1>View DVDs in the shop from Actor's Name</h1>

<div class="col-4 p-0 0 justify-content-end">
  <form asp-controller="Actor" asp-action="ActorList_02">
      <span class="btn-group">
          <input class="form-control" type="text" name="SearchText" placeholder="Search by Actor surname" />
          <input class="p-1 ml-2 btn-primary " type="submit" value="Search"/>
      </span>
  </form>

  
</div>

<table class="table">

    <thead>
        <tr>
            <th>
               Actor's Name
            </th>
            <th>
               DVD Title
            </th>
            <th>
               Copy Numbers
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.ActorFirstName @item.ActorSurName
            </td>
            <td>
                @item.DVDTitle
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CopyNumber)
            </td>
        </tr>
}
    </tbody>
</table>

