@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>

main {
    width: 1920px;
    margin: 200px 400px;
    color: white;
}

.sidenav {
  height: 100%;
  width: 200px;
  position: fixed;
  z-index: 0;
  top: 0;
  left: 0;
  background-color: var(--bs-primary);
  overflow-x: hidden;
  padding-top: 65px;
}


.sidenav a {
  padding: 10px 8px 6px 16px;
  text-decoration: none;
  color: var(--bs-white);
  display: block;
}

.sidenav a:hover {
  background-color: var(--bs-white);
  color: var(--bs-primary);
  cursor: pointer;
}

.main {
  margin-left: 160px; /* Same as the width of the sidenav */  
}

body {
 background-image: url("/home.jpg");
 background-color: #cccccc;
}

.header {
    margin-bottom: 1rem;
    margin-left: 12px;
    font-weight: bold;
    font-size: 16px;
}

</style>
</head>
<body>

<div class="sidenav">
  <p class="header">Click Options below</p>
  <a class="first_link" asp-controller="Actor" asp-action="ActorList_01">1. Titles of all DVDs stocked by the shop</a>
  <a asp-controller="Actor" asp-action="ActorList_02">2. Titles of all DVDs copies on the shelves</a>
</div>

<div class="main">
  <h1>ROPEY'S DVD RENTAL</h1>
  <h4>For all your Movies</h4>
</div>
   
</body>
</html> 


